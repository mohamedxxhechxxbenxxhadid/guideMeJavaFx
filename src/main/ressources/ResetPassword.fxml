<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.ResetPassword">
   <children>
      <Text layoutX="205.0" layoutY="63.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Reset Password">
         <font>
            <Font name="System Bold" size="26.0" />
         </font>
      </Text>
      <TextField fx:id="EmailField" layoutX="58.0" layoutY="121.0" prefHeight="26.0" prefWidth="255.0" promptText="Enter your Email" />
      <Button fx:id="SendCodeBtn" layoutX="418.0" layoutY="121.0" mnemonicParsing="false" text="Send Code" onAction="#SendCode" />
      <Label fx:id="Email" layoutX="58.0" layoutY="95.0" text="Email Adress" />
      <TextField fx:id="VerifyCodeField" layoutX="58.0" layoutY="189.0" prefHeight="26.0" prefWidth="255.0" promptText="Enter your Code" />
      <Button fx:id="VerifyBtn" layoutX="418.0" layoutY="189.0" mnemonicParsing="false" text="Verify"  onAction="#VerifyCode"/>
      <Label fx:id="VerifyCode" layoutX="58.0" layoutY="163.0" text="Verification Code" />
      <PasswordField fx:id="NewPasswordField" layoutX="58.0" layoutY="270.0" />
      <Label fx:id="NewPassword" layoutX="58.0" layoutY="246.0" text="Enter New Password" />
      <Button fx:id="ConfirmBtn" layoutX="418.0" layoutY="270.0" mnemonicParsing="false" text="Confirm"  onAction="#confirmPassword"/>
   </children>
</AnchorPane>