      <Text fx:id="postTitleId" fill="WHITE" layoutX="121.0" layoutY="107.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Title">
         <font>
            <Font size="25.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
